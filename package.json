{
	"name": "@snickbit/utilities",
	"version": "3.0.25",
	"description": "A collection of simple JavaScript helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"docs": "typedoc",
		"index": "indexer",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run index && pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/plural": "workspace:^0.0.2",
		"just-camel-case": "^6.0.1",
		"nanoid": "^3.3.4"
	},
	"devDependencies": {
		"@remedyred/indexer": "^2.4.2",
		"@types/jest": "^27.5.2",
		"jest": "^28.1.0",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.4",
		"tsup": "^6.0.1",
		"typedoc": "^0.22.17",
		"typedoc-plugin-markdown": "^3.12.1",
		"typescript": "^4.7.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
