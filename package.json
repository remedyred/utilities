{
	"name": "@snickbit/utilities",
	"version": "3.4.7",
	"description": "A collection of simple JavaScript helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run clean && indexer && tsup --minify --dts",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "indexer && concurrently -c magenta,cyan pnpm:dev:*",
		"dev:build": "tsup",
		"dev:types": "tsc --project tsconfig.types.json",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"index": "indexer",
		"release": "semantic-release",
		"watch": "indexer && concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:build": "pnpm run dev:build --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/plural": "^1.0.0",
		"just-camel-case": "^6.0.1",
		"nanoid": "^3.3.4"
	},
	"devDependencies": {
		"@snickbit/indexer": "2.5.17",
		"@types/jest": "28.1.8",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"typedoc": "0.23.12",
		"typedoc-plugin-markdown": "3.13.6",
		"typescript": "4.8.2"
	},
	"engines": {
		"node": ">= 12"
	}
}
