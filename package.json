{
	"name": "@snickbit/utilities",
	"version": "3.0.2",
	"description": "A collection of simple JavaScript helpers",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./cjs/index.js",
		"import": "./esm/index.js",
		"types": "./types/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"test": "jest",
		"build": "tsup",
		"build:meta": "yarn build --metafile",
		"prod": "yarn build --minify",
		"watch": "yarn build --watch",
		"docs": "typedoc --tsconfig ./tsconfig.json && shx mv docs/README.md DOCS.md && shx rm -rf docs",
		"version": "yarn prod && yarn docs"
	},
	"dependencies": {
		"just-camel-case": "^6.0.1",
		"nanoid": "^3.3.2",
		"pluralize": "^8.0.0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
