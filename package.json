{
	"name": "@snickbit/utilities",
	"version": "3.0.0",
	"description": "A collection of simple JavaScript helpers",
	"homepage": "https://github.com/snickbit/snickbit.js",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./lib/index.js",
	"types": "./types/index.d.ts",
	"files": [
		"dist",
		"lib",
		"types"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./lib/index.js",
			"types": "./types/index.d.ts"
		},
		"./*": {
			"require": "./dist/*.js",
			"import": "./lib/*.js",
			"types": "./types/*.d.ts"
		}
	},
	"scripts": {
		"clean": "shx rm -rf lib dist types",
		"docs": "typedoc --tsconfig ./tsconfig.json && shx mv docs/README.md DOCS.md && shx rm -rf docs",
		"build": "concurrently -n esm,cjs \"yarn build:lib\" \"yarn build:dist\"",
		"build:lib": "tsc --module es6 --target es6 --outDir lib --declaration --declarationDir types",
		"build:dist": "tsc --module commonjs --target es5 --outDir dist",
		"watch": "concurrently -n esm,cjs \"yarn watch:lib\" \"yarn watch:dist\"",
		"watch:lib": "yarn build:lib --watch",
		"watch:dist": "yarn build:dist --watch",
		"test": "jest",
		"version": "yarn clean && yarn build && yarn docs"
	},
	"dependencies": {
		"just-camel-case": "^6.0.1",
		"nanoid": "^3.3.2",
		"pluralize": "^8.0.0"
	},
	"devDependencies": {
		"@types/pluralize": "^0.0.29",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.25",
		"concurrently": "^7.1.0",
		"esbuild": "^0.14.37",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0"
	}
}
