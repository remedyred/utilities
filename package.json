{
	"name": "@snickbit/utilities",
	"version": "3.9.4",
	"description": "A collection of simple JavaScript helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run clean && indexer && tsup --minify",
		"clean": "shx rm -rf ./dist",
		"dev": "indexer && concurrently -c magenta,cyan pnpm:dev:*",
		"dev:build": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"index": "indexer",
		"release": "semantic-release",
		"types": "tsc --project tsconfig.types.json",
		"watch": "indexer && concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:build": "pnpm run dev:build --watch",
		"watch:types": "pnpm run types --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@lukeed/uuid": "^2.0.1",
		"@snickbit/plural": "^1.0.14",
		"just-camel-case": "6.2.0"
	},
	"devDependencies": {
		"@snickbit/indexer": "^2.5.28",
		"@types/jest": "29.5.1",
		"jest": "29.5.0",
		"shx": "0.3.4",
		"ts-jest": "29.1.0",
		"tsup": "6.7.0",
		"typedoc": "0.24.7",
		"typedoc-plugin-markdown": "3.15.3",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
