{
	"name": "@snickbit/utilities",
	"version": "3.4.0",
	"description": "A collection of simple JavaScript helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "indexer && tsup --minify",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "indexer && tsup",
		"docs": "typedoc",
		"index": "indexer",
		"meta": "tsup --minify --metafile",
		"release": "semantic-release",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": "../../.releaserc.json"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/plural": "^0.0.5",
		"just-camel-case": "^6.0.1",
		"nanoid": "^3.3.4"
	},
	"devDependencies": {
		"@snickbit/indexer": "2.5.7",
		"@types/jest": "28.1.7",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.2",
		"typedoc": "0.23.10",
		"typedoc-plugin-markdown": "3.13.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	}
}
